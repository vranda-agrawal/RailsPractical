<h1>Search page</h1>
<% if !flash[:errors].empty? %>
  <div >
    <ul>
      <li style="color:red;"><%= flash[:errors] %></li>
    </ul>
  </div>
<% end %>
<%= form_tag(search_orders_path, :method => "get") do %>
  <%= label_tag(:q, "Search data by product name:") %>
  <%= collection_select(:q, :shopproduct_id, Shopproduct.all, :id, :title) %><br/>
  
  <%= submit_tag("Search") %>
<% end %>
<% if (@orders != nil) %>
  <h1>Order data found</h1>
  <% @orders.each do |orders| %>
    <div >
    <p>
        <strong>Order Id:</strong>
        <%= orders.id %>
    </p>
    <p>
        <strong>Product Name:</strong>
        <%= orders.shopproduct.title %>
    </p>
    <p>
        <strong>Quantity:</strong>
        <%= orders.quantity %>
    </p>
    <p>
        <strong>Total Price:</strong>
        <%= orders.total_price %>
    
    </p>
    <p>
        <strong>Status:</strong>
        <%= orders.status %>
        
    </p>
    </div>
  <% end %>
<% end %>