<h1>Add New Employee</h1>
<% if flash[:errors] %>
  <div >
    <ul>
      <% flash[:errors].each do |error| %>
        <li style="color:red;"><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @employee do |form| %>
  <div>
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name %>
    </div>
  <div>
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name %>
    </div>
  <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :age, style: "display: block" %>
      <%= form.number_field :age %>
    </div>
    <div>
      <%= form.label :no_of_order, style: "display: block" %>
      <%= form.text_field :no_of_order %>
    </div>
    <div>
      <%= form.label :full_time_available, style: "display: block" %>
      <%= form.check_box :full_time_available %>
    </div>
    <div>
      <%= form.label :salary, style: "display: block" %>
      <%= form.number_field :salary %>
    </div>
  <div>
  <%= form.submit %>
  </div>
<%end%>