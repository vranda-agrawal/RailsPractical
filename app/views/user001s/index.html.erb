<h1> Student Details </h1>
<table border=" solid 3px ">
  <tr>
  <th>Name</th>
  <th>Email</th>
  <th>Profile Pic</th>
  </tr>
   <% @user.each do |user| %>
    <tr>
      <td><%=user.name %></td>
      <td><%=user.email %></td>
      <td><%= link_to "Edit Faculty", edit_user001_path(id: user.id) %></td>
      <td><%= link_to "Show Faculty", user001_path(id: user.id) %></td>
      <td><%= button_to "Destroy Faculty",user001_path(id: user.id),
            method: 'delete' ,
            data:{ confirm: "are you sure"}%></td>
    </tr>
  <% end %>
</table>
<%= link_to "Add a new User", new_user001_path %>
 