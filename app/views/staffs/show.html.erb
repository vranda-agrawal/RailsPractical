<h1>Staff</h1>
<div >
  <p>
    <strong>Emplyee Name:</strong>
    <%= @staff.employee_name %>
  </p>
  <p>
    <strong>email:</strong>
    <%= @staff.email %>
  </p>
  <p>
    <strong>password:</strong>
    <%= @staff.password %>
  </p>
  <p>
    <strong>gender:</strong>
    <%= @staff.gender %>
  </p>
  <p>
    <strong>Hobbies:</strong>
    <%= @staff.hobbies %>
  </p>
  <p>
    <strong>Address:</strong>
    <%= @staff.address %>
  </p>
  <p>
    <%@staff.employee_addresses.each do |e|%>
      <strong>House Name:</strong>
      <%= e.house_name %><br/><br/>
      <strong>Street Name:</strong>
      <%= e.street_name %><br/><br/>
      <strong>Road:</strong>
      <%= e.road %><br/>
    <% end %>
  </p>
  <p>
    <strong>Mobile Number:</strong>
    <%= @staff.mobile_number %>
  </p>
  <p>
    <strong>Birth Date:</strong>
    <%= @staff.birth_date %>
  </p>
  <p>
    <p><b>Document : </b></p><br/>
    <% if @staff.document.attached? %>
        <%= image_tag @staff.document, style: "width: 100px; display: block:" %>
    <% end %>
  </p>
</div>
